<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_pharmaManager"
            android:layout_below="@+id/tv_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/drawable_shadow_down">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy manager"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_small_label"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_15sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="right">

                <ToggleButton
                    android:id="@+id/toggle"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/check"
                    android:textOn=""
                    android:textOff="" android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_centerVertical="true"/>

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Sub"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/drawable_shadow_down">

        <TextView
            android:id="@+id/tvOther"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="2"
            android:textSize="@dimen/text_small_label"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"/>

        <ImageView
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_drop_down"
            android:layout_marginRight="@dimen/_15sdp"/>

    </LinearLayout>


</LinearLayout>