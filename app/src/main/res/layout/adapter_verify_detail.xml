<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_background"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/drawable_shadow_up"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp">


        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_label"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginRight="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/tv_cert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small_label"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_15sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: "
                android:gravity="center"
                android:textSize="@dimen/text_small_label"
                android:textColor="@color/grey"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_15sdp" />

            <TextView
                android:id="@+id/tv_upLoadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vvg"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_small_label"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

    <!--<View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#F4F4F4"/>-->
    <View
        android:id="@+id/shadow2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_shadow_bottom_height"
        android:background="@drawable/bottom_shadow_gradient"/>

</LinearLayout>