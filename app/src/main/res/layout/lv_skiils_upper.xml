<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background">

    <LinearLayout
        android:id="@+id/ll_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/drawable_shadow_down"
        android:paddingTop="@dimen/_26sdp"
        android:paddingBottom="@dimen/_26sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_11sdp">

        <TextView
            android:id="@+id/rb_text"
            android:layout_width="0dp"
            android:layout_weight="0.80"
            android:layout_height="wrap_content"
            android:text="Have you dealt with methadone patients?"
            android:textSize="@dimen/text_small_label"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:lineSpacingExtra="@dimen/_2sdp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:gravity="right">

            <Switch
                style="@style/SwitchStyle"
                android:id="@+id/sw_compat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/drawable_switch"
                android:track="@drawable/drawable_bg"
                android:layout_marginRight="@dimen/_10sdp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>