<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_15sdp">

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_shadow_top_height"
            android:background="@drawable/top_shadow_gradient"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/drawable_shadow_down"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:text="Would you be interested in receiving information about permanent positions?"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_label"
                android:layout_marginLeft="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:gravity="right"
                android:layout_marginRight="@dimen/_10sdp">

                <Switch
                    style="@style/SwitchStyle"
                    android:id="@+id/sw_compat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/drawable_switch"
                    android:track="@drawable/drawable_bg"
                    android:layout_marginRight="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pharma"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/drawable_shadow_normal"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:text="Pharmacies you are registered with to locum"
                android:textSize="@dimen/text_small_label"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:gravity="right"
                android:layout_marginLeft="@dimen/_20sdp">

            <ImageView
                android:visibility="visible"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_drop_down"
                android:layout_marginRight="@dimen/_12sdp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/shadow2"
            android:layout_below="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_shadow_bottom_height"
            android:background="@drawable/bottom_shadow_gradient"/>
    </LinearLayout>


</LinearLayout>