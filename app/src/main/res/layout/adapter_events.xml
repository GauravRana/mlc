<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_main"
    android:orientation="vertical"
    android:background="@drawable/drawable_shadow"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_15sdp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:maxHeight="@dimen/_50sdp"
                        android:text="Heart checkup forsenior citizens fghgvhvjh"
                        android:textColor="@color/black"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="@dimen/_12sdp"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_lab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/text_small_label"
                        android:text="Â£ 176.00"/>

                    <ImageView
                        android:id="@+id/iv_free"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_free"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/iv_cal"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/padding_5dp"
                    android:src="@drawable/ic_cal"
                    android:layout_gravity="center" />


                <TextView
                    android:id="@+id/tv_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:text="Jan 20, 2018"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/text_small_label" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_clock"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:padding="@dimen/padding_5dp"
                    android:src="@drawable/ic_clock"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/tv_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00-22:00"
                    android:textSize="@dimen/text_small_label"
                    android:textColor="@color/black"
                    android:gravity="bottom"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:layout_marginRight="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pin_small"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/tv_Place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_small_label"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/margin_2dp"
                        android:text="London" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>