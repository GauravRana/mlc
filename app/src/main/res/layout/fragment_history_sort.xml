<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.bookings.fragment.HistorySortFragment"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_dateRange"
        android:layout_below="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="@string/text_date"
        android:textSize="@dimen/text_details_small"
        android:background="@color/screen_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/space4"
                android:layout_below="@id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textSize="@dimen/text_details_small"
                android:textColor="@color/grey"
                android:text="@string/text_date"
                android:background="@color/screen_background"/>

            <View
                android:id="@+id/shadow7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_shadow_top_height"
                android:background="@drawable/top_shadow_gradient"/>

            <LinearLayout
                android:id="@+id/ll_Asc"
                android:layout_below="@+id/space4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/text_asc"
                    android:textSize="@dimen/text_details"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/tg_asc"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:background="@drawable/check"
                    android:textOn=""
                    android:textOff=""
                    android:focusable="false"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:focusableInTouchMode="false"
                    android:layout_centerVertical="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_shadow_top_height"
                android:background="@drawable/top_shadow_gradient"/>

            <LinearLayout
                android:id="@+id/ll_Desc"
                android:layout_below="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:text="@string/text_desc"
                    android:textSize="@dimen/text_details"
                    android:layout_marginLeft="@dimen/_15sdp"/>

                <ImageView
                    android:id="@+id/tg_desc"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:background="@drawable/check"
                    android:textOn=""
                    android:textOff=""
                    android:focusable="false"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:focusableInTouchMode="false"
                    android:layout_centerVertical="true"/>

            </LinearLayout>

            <View
                android:id="@+id/shadow8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_shadow_bottom_height"
                android:background="@drawable/bottom_shadow_gradient"/>
    </LinearLayout>
</LinearLayout>