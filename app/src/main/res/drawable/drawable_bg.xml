<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
    <item android:state_checked="false" android:drawable="@drawable/ic_track" />
    <item android:state_checked="true"  android:drawable="@drawable/ic_track_green" />
    -->

    <item android:state_checked="true">
        <shape  android:shape="rectangle">
            <solid android:color="#27A19E" />
            <corners android:radius="25dp" />
            <size android:width="0dp"
                  android:height="23dp" />
        </shape>
    </item>


    <item android:state_checked="false">
        <shape  android:shape="rectangle"   >
            <solid android:color="#FFFFFF" />
            <corners android:radius="25dp" />
            <size android:width="0dp" android:height="23dp" />
            <stroke android:width="1dp" android:color="#E2E2E2"/>
        </shape>
    </item>

</selector>